<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".VerificationSms">


        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/_bg__page_home"
                android:layout_width="412dp"
                android:layout_height="846dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/_bg__page_home_shape" />

            <View   android:id="@+id/rectangle_4"
                android:background="@drawable/rectangle_4_shape"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="769dp"
                android:layout_width="414dp"
                android:layout_height="82dp" />

            <View
                android:id="@+id/rectangle_5"
                android:layout_width="412dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_5_shape" />

            <ImageView android:id="@+id/free_sample_by_wix"
                android:src="@drawable/logo"
                android:contentDescription="free_sample_by_wix"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="10dp"
                android:layout_width="134dp"
                android:layout_height="40dp" />

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="412dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="060dp"
                android:background="@drawable/rectangle_11_shape" />

            <TextView
                android:id="@+id/se_connecter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="77dp"
                android:text="Effectuer un virement"
                android:gravity="center"
                android:textColor="@color/rectangle_5_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Validation de mon virement"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp">

                <View   android:id="@+id/rectangle_6_gray"
                    android:background="@drawable/rectangle_6_gray"
                    android:layout_marginTop="6dp"
                    android:layout_width="360dp"
                    android:layout_height="360dp"
                    android:layout_centerHorizontal="true"
                    />

                <View
                    android:id="@+id/rectangle_6"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:background="@drawable/rectangle_6_shape" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Un SMS contenant un code de validation"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtmobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="a éte envoyé au "
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="85dp"
                    android:clickable="true"
                    android:text="Vous n'avez pas reçu votre code ?"
                    android:textColor="@color/blue_string"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_marginRight="10dp"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:id="@+id/inputotp1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"
                        app:hideLineWhenFilled="true"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/inputotp2"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"
                        app:hideLineWhenFilled="true"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/inputotp3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"
                        app:hideLineWhenFilled="true"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/inputotp4"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"
                        app:hideLineWhenFilled="true"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/inputotp5"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"
                        app:hideLineWhenFilled="true"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:id="@+id/inputotp6"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"
                        app:hideLineWhenFilled="true"/>


                </LinearLayout>

                <RelativeLayout android:id="@+id/btnsubmit"
                    android:layout_marginTop="210dp"
                    android:layout_marginLeft="0dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <View   android:id="@+id/blue_bg"
                        android:background="@drawable/button_ok_dialog"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <TextView android:id="@+id/ok"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/creer_un_compte_color"
                        android:layout_marginLeft="46dp"
                        android:layout_marginTop="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:text="Valider"
                        />

                </RelativeLayout>


                <RelativeLayout android:id="@+id/sendotp_again"
                    android:layout_marginTop="280dp"
                    android:layout_marginLeft="0dp"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="0dp"
                        android:background="@drawable/button_annuler_dialog" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginTop="13dp"
                        android:gravity="center"
                        android:text="Renvoyer le code"
                        android:textColor="@color/blue_string"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </RelativeLayout>

            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="490dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:id="@+id/probar2"/>

            <ImageView android:id="@+id/_transaction__2_"
                android:src="@drawable/virements_icon_round"
                android:contentDescription="_transaction__2_"
                android:layout_marginLeft="149dp"
                android:layout_marginTop="789dp"
                android:layout_width="44dp"
                android:layout_height="44dp" />


            <RelativeLayout android:id="@+id/home__1__ek1"
                android:layout_marginTop="787dp"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView android:id="@+id/home10"
                    android:src="@drawable/home_icon"
                    android:contentDescription="home__1__ek2"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="3.5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </RelativeLayout>

            <ImageView android:id="@+id/credit_card"
                android:src="@drawable/card_payment_icon"
                android:contentDescription="credit_card"
                android:layout_marginLeft="238dp"
                android:layout_marginTop="792dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView android:id="@+id/invoice"
                android:src="@drawable/content_icon"
                android:contentDescription="invoice"
                android:layout_marginLeft="322dp"
                android:layout_marginTop="792dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView android:id="@+id/_power"
                android:src="@drawable/white_power_icon"
                android:contentDescription="_power"
                android:layout_marginLeft="372dp"
                android:layout_marginTop="18dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <ImageView android:id="@+id/bell"
                android:src="@drawable/notifications_icon"
                android:contentDescription="bell"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="18dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <ImageView android:id="@+id/gears"
                android:src="@drawable/white_settings_icon"
                android:contentDescription="gears"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />


        </RelativeLayout>



</ScrollView>

