<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    tools:context=".VerificationSms">


        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/_bg__page_home"
                android:layout_width="412dp"
                android:layout_height="846dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/_bg__page_home_shape" />

            <View   android:id="@+id/rectangle_4"
                android:background="@drawable/rectangle_4_shape"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="769dp"
                android:layout_width="414dp"
                android:layout_height="82dp" />

            <View
                android:id="@+id/rectangle_5"
                android:layout_width="412dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_5_shape" />

            <ImageView android:id="@+id/free_sample_by_wix"
                android:src="@drawable/logo"
                android:contentDescription="free_sample_by_wix"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="10dp"
                android:layout_width="134dp"
                android:layout_height="40dp" />

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="412dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="060dp"
                android:background="@drawable/rectangle_11_shape" />

            <TextView
                android:id="@+id/se_connecter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="77dp"
                android:text="Effectuer un virement"
                android:gravity="center"
                android:textColor="@color/rectangle_5_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="190dp"
                    android:src="@drawable/recived"
                    android:id="@+id/img_send_otp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="SMS verification"
                    android:textSize="20sp"
                    android:textColor="@color/colortextfirst"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text="Please enter SMS sent to your Mobile Number"
                    android:textColor="@color/colortextsecond"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="50dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:text=""
                    android:id="@+id/txtmobileno"
                    android:textColor="@color/colortextsecond"/>

                //#############################
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:id="@+id/inputotp1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/inputotp2"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/inputotp3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/inputotp4"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/inputotp5"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"/>

                    <EditText
                        android:background="@drawable/backgroundbox"
                        android:layout_width="40dp"
                        android:layout_height="46dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginLeft="4dp"
                        android:id="@+id/inputotp6"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/colortextfirst"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:ignore="Lable1For"/>






                </LinearLayout>

                //#############################

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Did't recive SMS ?"
                        android:textSize="14sp"
                        android:textColor="@color/colortextsecond"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send SMS again"
                        android:textColor="@color/colortextfirst"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp"
                        android:id="@+id/sendotp_again"/>





                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verfiy"
                        android:id="@+id/btnsubmit"
                        android:layout_margin="30dp"
                        android:background="@drawable/backgroundbutton"
                        android:textColor="@color/colortextfirst"
                        android:textStyle="bold"/>

                    <ProgressBar
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/probar2"/>

                </FrameLayout>




            </LinearLayout>

            <ImageView android:id="@+id/_transaction__2_"
                android:src="@drawable/virements_icon_round"
                android:contentDescription="_transaction__2_"
                android:layout_marginLeft="149dp"
                android:layout_marginTop="789dp"
                android:layout_width="44dp"
                android:layout_height="44dp" />


            <RelativeLayout android:id="@+id/home__1__ek1"
                android:layout_marginTop="787dp"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView android:id="@+id/home10"
                    android:src="@drawable/home_icon"
                    android:contentDescription="home__1__ek2"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="3.5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </RelativeLayout>

            <ImageView android:id="@+id/credit_card"
                android:src="@drawable/card_payment_icon"
                android:contentDescription="credit_card"
                android:layout_marginLeft="238dp"
                android:layout_marginTop="792dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView android:id="@+id/invoice"
                android:src="@drawable/content_icon"
                android:contentDescription="invoice"
                android:layout_marginLeft="322dp"
                android:layout_marginTop="792dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView android:id="@+id/_power"
                android:src="@drawable/white_power_icon"
                android:contentDescription="_power"
                android:layout_marginLeft="372dp"
                android:layout_marginTop="18dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <ImageView android:id="@+id/bell"
                android:src="@drawable/notifications_icon"
                android:contentDescription="bell"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="18dp"
                android:layout_width="26dp"
                android:layout_height="26dp" />

            <ImageView android:id="@+id/gears"
                android:src="@drawable/white_settings_icon"
                android:contentDescription="gears"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="17dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />


        </RelativeLayout>



</ScrollView>

